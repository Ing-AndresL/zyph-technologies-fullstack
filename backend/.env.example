# .env.example
# Copia este archivo como .env y completa las variables

# Configuración del Servidor
PORT=3001
NODE_ENV=production

# URLs
FRONTEND_URL=https://zyph.tech
API_URL=https://api.zyph.tech

# Base de Datos MongoDB
MONGODB_URI=mongodb+srv://usuario:contraseña@cluster.mongodb.net/zyph-web

# Configuración de Email
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-gmail
ADMIN_EMAIL=admin@zyph.tech

# Token de Administración (genera uno aleatorio y seguro)
ADMIN_TOKEN=tu_token_super_secreto_aqui_123456789

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=5

# Configuración de Cors
CORS_ORIGIN=https://zyph.tech

# Configuración de JWT (si implementas autenticación)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui

# Configuración de Logs
LOG_LEVEL=info